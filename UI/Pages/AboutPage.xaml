<Page x:Class="IPSCM.UI.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IPSCM.UI.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="594" d:DesignWidth="1008"
	Title="AboutPage">

    <Canvas>
        <Label Content="{x:Static local:Resources.AboutUsTitle}" Canvas.Left="136" Canvas.Top="32" FontSize="14" FontWeight="Bold" FontFamily="NSimSun"/>
        <TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static local:Resources.AboutUsContent}" Canvas.Top="94" Canvas.Left="166" Height="471" Width="788" FontFamily="NSimSun"></TextBlock>
    </Canvas>
</Page>
